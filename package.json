{
  "name": "@gor-dev/yandex-tracker-mcp",
  "version": "1.2.0",
  "description": "MCP server for Yandex Tracker API integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "yandex-tracker-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "skill",
    "skills",
    ".claude-plugin",
    ".mcp.json",
    "README.md",
    "LICENSE"
